<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jogazo.network.SimpleGet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/get_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter a valid HTTP URL and then press GET to retrieve data"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="7dp" />


        <EditText
            android:id="@+id/get_input"
            android:layout_width="364dp"
            android:layout_height="40dp"
            android:text="http://ipv4.download.thinkbroadband.com/5MB.zip"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="39dp" />


        <Button
            android:id="@+id/get_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="152dp" />


        <TextView android:id="@+id/get_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
